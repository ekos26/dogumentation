<% if @editing_privileges %>
  <p><%= link_to "Return to your dog(s)", user_path(@owner) %></p>
<% end %>

<h1><%= @dog.name %></h1>

<% if @dog.profile_picture %>
  <p><%= image_tag url_for(@dog.profile_picture), style: "max-height: 300px; width: auto;" %></p>
<% end %>

<p>Breed: <%= @dog.breed %></p>
<p>Size: <%= @dog.size.capitalize %></p>
<p>Birthday: <%= @dog.birthday %></p>
<p>Owner: <%= @owner.to_s %></p>
<p>Owner Phone Number: <%= @owner.phone_num %></p>

<h2>Care Instructions</h2>
<% @instructions.each do |instruction| %>
  <h4><%= instruction.header %></h4>
  <p><%= instruction.content %></p>
<% end %>
<% if @editing_privileges %>
  <%= link_to "Add Instruction", new_instruction_path %>
<% end %>

<h2>In Case of Emergency</h2>
<% if @vets %>
  <% @vets.each do |vet| %>
    <h3><%= vet.to_s %></h3>
    <ul>
        <li>Office Address: <%= vet.address %></li>
        <li>Phone Number: <%= vet.phone_num %></li>
        <li>Email: <%= vet.email %></li>
    </ul>
  <% end %>
<% end %>

<% if @editing_privileges %>
  <p><%= link_to "Add Vet", new_vet_path %></p>
  <p><%= button_to "Log Out", logout_path, method: :delete %></p>
<% end %>
