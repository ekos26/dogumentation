<% if flash[:errors] %>
  <h3 style="color: red">Errors!</h3>
  <ul>
    <% flash[:errors].each do |error| %>
      <li style="color: red"><%= error %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @dog do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name, placeholder: "Snoopy" %><br><br>
  <%= f.label :breed %><br>
  <%= f.text_field :breed, placeholder: "Beagle" %><br><br>
  <%= f.label :birthday %><br>
  <%= f.date_field :birthday %><br><br>
  <%= f.label :size %><br>
  <%= f.select :size, [["Small", "small"], ["Medium", "medium"], ["Large", "large"]] %><br><br>
  <%= f.label :profile_picture, "Profile picture" %><br>
  <%= f.file_field :profile_picture %><br><br>
  <%= f.label :username, "Username (30 characters max)" %><br>
  <%= f.text_field :username %><br><br>
  <%= f.submit %>
<% end %>